<h1 class="pageHeader">Frequently Asked Questions</h1>

<% if current_user.try(:admin?) %>
  <%= render 'form' %>
<% end %>

<hr class="dottedDivider"/>

<div id="faqsIndex">
  <% @faqs.in_groups(3, false).each do |group| %>
    <ul class="faqList">
      <% group.each do |faq| %>
        <li><%= link_to faq.question, '#question'+faq.id.to_s %></li>
      <% end %>
    </ul>
  <% end %>
  <br class="clear"/>
</div>

<hr class="dottedDivider"/>

<%= render 'all_faqs' %>