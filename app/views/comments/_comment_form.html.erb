<div class="postUser">
  <div class="formField">
    <%= label_tag '', '&nbsp;'.html_safe %><br/>
    <%= user_med_avatar(current_user) %><br/>
    <span class="postUsername"><%= link_to current_user.username, current_user %></span>
  </div>
</div>
<%= form_for [@post, Comment.new] do |f| %>
  <div class="formField">
    <b><%= f.label :message, 'Leave a reply' %></b><br/>
    <%= f.text_area :message %>
  </div>

  <div class="formSubmit">
    <%= f.submit 'Add Reply' %>
  </div>
<% end %>