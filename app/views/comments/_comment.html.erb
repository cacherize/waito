<div class="postComment postConstraint"> 
  <div class="postUser">
    <%= link_to image_tag('default_user.png', class: 'userImageMed'), details[:user] %><br/>
    <span class="postUsername"><%= link_to details[:user].username %></span>
  </div>
  <div class="postContent"><%= markdown(comment.message) %></div>
  <div class="postBottom">
    <div class="commentDatestamp">
      <%= displayed_datestamp(comment.created_at) %>
      <% if root_comment %>
        <span> | </span>
      <% end %>
    </div>
    <% if root_comment %>
      <div class="commentReply">
        <%= link_to 'Reply to comment', load_reply_form_path(comment), class: 'replyFormLoadLink', rel: comment.id  %>
      </div>
    <% end %>
    <div class="postRep">
      <%= link_to '', comment_vote_path(comment, rep_val: 1.0), method: :put, class: 'like' %>
      <p class="repCount"><%= details[:reputation] %></p>
      <%= link_to '', comment_vote_path(comment, rep_val: -1.0), method: :put, class: 'dislike' %>
    </div>
  </div>
</div>
