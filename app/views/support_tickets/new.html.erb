<div class="center">
  <%= form_for @ticket, html: {class: 'form'} do |f| %>
    <%= form_errors_for(@ticket) %>

    <%= f.hidden_field :user_id, value: current_user.try(:id) %>
    <h1 class="formHeader">Submit A Support Ticket</h1>

    <div class="formField">
      <%= f.label :email %><br/>
      <%= f.text_field :email, value: current_user.try(:email) %>
    </div><br/>

    <div class="formField">
      <%= f.label :reason %><br/>
      <%= f.select :reason, options_for_select(SupportTicket::TICKET_REASONS), include_blank: "Select a reason" %>
    </div><br/>

    <div class="formField">
      <%= f.label :message %>
      <span class="fieldReq"><span id="supportMessageCharCount">1000</span> characters left</span><br/>
      <%= f.text_area :message, placeholder: "Try to be descriptive, but brief. Maximum 1000 characters." %>
    </div><br/>

    <div class="formSubmit"><%= f.submit 'Create Ticket' %></div>
  <% end %>
</div>
<%= javascript_include_tag params[:controller] %>